@model IEnumerable<kapraMarket.web.Models.Categories>

@{
    ViewData["Title"] = "Categories";
}

<h1>Add Category</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.categoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.categoryDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.categoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.categoryDescription)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.categoryId">Edit</a> |
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.categoryId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.categoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
